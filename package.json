{
  "name": "dsgen",
  "version": "0.2.2",
  "description": "Create your own design system using CSS variables",
  "keywords": [
    "css",
    "design system",
    "design tokens",
    "snippets",
    "styleguide"
  ],
  "author": "Nikita Golubov <neekitkah@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CSSSR/dsgen.git"
  },
  "bin": {
    "dsgen": "lib/index.js"
  },
  "scripts": {
    "build": "yarn clean && tsc && chmod +x lib/index.js",
    "clean": "rm -rf lib",
    "generate": "yarn build && node lib/index.js",
    "type-check": "tsc --pretty --noEmit",
    "unit": "jest",
    "test": "yarn type-check && yarn unit",
    "prepublishOnly": "yarn --frozen-lockfile && yarn build"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,md}": "prettier --write"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "stylelint-declaration-strict-value": "^1.7.12"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "csstype": "^3.0.8",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "postcss": "^8.2.13",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.4.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
